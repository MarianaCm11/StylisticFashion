<%- include("templates/encabezado")%>
    <link rel="stylesheet" href="/css/styles.css">
    <script src="js/validacion.js" defer></script>

    <title>Login</title>
    </head>

    <body>
        <div class="container-form sign-up">
            <div class="welcome-back">
                <div class="message">
                    <h2 class="bien">Bienvenido a Stylistic Fashion</h2>
                    <p class="parrafo">Si ya tienes una cuenta por favor inicia sesion aqui</p>
                    <button class="sign-up-btn">Iniciar Sesion</button>
                </div>
            </div>
            <form id="formulario-registro" class="formulario" action="/register" method="post">
                <h2 class="create-account">Crear una cuenta</h2>
                <p class="parra">Donde la moda encuentra su expresión única</p>
                <div class="contenedor-input">
                    <span class="icono"><i class="fa-solid fa-user"></i></span>
                    <input name="usuario" id="usuario" type="text" required>
                    <label for="usuario">Nombre de usuario</label>
                    <div id="usuario-error" class="error-message"></div>
                </div>
                <div class="contenedor-input">
                    <span class="icono"><i class="fa-solid fa-envelope"></i></span>
                    <input name="correo" id="correo" type="text" required>
                    <label for="correo">Email</label>
                    <div id="correo-error" class="error-message"></div>
                </div>
                <div class="contenedor-input">
                    <span class="icono">
                        <i class="fa-solid fa-eye" onclick="togglePasswordVisibility('contrasena')"></i>
                    </span>
                    <input name="contrasena" id="contrasena" type="password" required>
                    <label for="contrasena">Contraseña</label>
                    <div id="contrasena-error" class="error-message"></div>
                </div>
                <button type="submit" class="btn">Registrarse</button>
            </form>
        </div>
        <div class="container-form sign-in">
            <form id="formulario-login" class="formulario" action="/login" method="post">
                <h2 class="create-account">Iniciar Sesion</h2>
                <p class="parra">Revive estilo favorito con un clic</p>
                <div class="contenedor-input">
                    <span class="icono"><i class="fa-solid fa-envelope"></i></span>
                    <input name="correo" id="correo-login" type="text" required>
                    <label for="correo-login">Email</label>
                    <div id="correo-login-error" class="error-message"></div>
                </div>
                <div class="contenedor-input">
                    <span class="icono"><i class="fa-solid fa-eye"
                            onclick="togglePasswordVisibility('contrasena-login')"></i></span>
                    <input name="contrasena" id="contrasena-login" type="password" required>
                    <label for="contrasena-login">Contraseña</label>
                    <div id="contrasena-login-error" class="error-message"></div>
                </div>
                <div class="recordar">
                    <label for="#"><input type="checkbox">Recordar sesion</label>
                </div>
                <button type="submit" class="btn">Iniciar Sesion</button>
            </form>
            <div class="welcome-back">
                <div class="message">
                    <h2 class="bien">Bienvenido de nuevo</h2>
                    <p class="parrafo">Si aun no tienes una cuenta por favor registrese aqui</p>
                    <button class="sign-in-btn">Registrarse</button>
                </div>
            </div>
        </div>
        <a href="/">
            <button id="regresar-btn" class="btn"> <i class="fa-solid fa-arrow-left"></i>
            </button>
        </a>
        <%- include("templates/pie")%>